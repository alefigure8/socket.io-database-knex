<div class="container">
    <div class="mt-3 row" >
        <div class="col-md-6 mr-auto ml-auto">
            <h2 class="mb-5 text-uppercase text-center">Ingrese Producto</h2>
            <form class="mb-5" id="form_products">
                <label for="title" class="form-label">Nombre</label>
                <input type="text" class="form-control" name="title" id="title">
                <label for="price" class="form-label">Precio</label>
                <input type="text" class="form-control" name="price" id="price">
                <label for="thumbnail" class="form-label">Foto URL</label>
                <input type="text" class="form-control" name="thumbnail" id="thumbnail">
                <input type="submit" class="btn btn-success btn-block mt-3" value="Enviar mensaje">
            </form>
        </div>
    </div>
    <div id="products">
        {{> products}}
    </div>
    <div class="mt-5">
        <div class="mt-3 row">
            <div class="col-md-6 mr-auto ml-auto">
                <h2 class="mb-5 text-uppercase text-center">Centro de Mensajes</h2>
                <form id="form_comments">
                    <div class="row d-flex justify-content-center">
                        <div class="col-md-8 mb-3 ">
                            <input type="email" class="form-control" name="mail" id="mail" placeholder="usuario@correo.com">
                        </div>
                    </div>
                    <div id="comments">
                        {{> comments}}
                    </div>
                    <div class="row d-flex justify-content-center">
                        <div class="col-md-6 mb-3 ">
                            <input type="text" class="form-control " name="message" id="message" placeholder="Deje su comentario">
                        </div>
                        <div class="col-auto mb-3">
                            <input type="submit" class="btn btn-success" value="Enviar mensaje">
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>